<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewContas"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="8dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewBanco"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/cardview_dark_background"
                android:scaleType="centerInside"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/textViewTitulo"
                card_view:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:id="@+id/textViewNomeBanco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                card_view:layout_constraintLeft_toRightOf="@+id/imageViewBanco"
                android:layout_marginLeft="9dp"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7dp"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:id="@+id/textViewAgencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textViewNomeBanco"
                card_view:layout_constraintLeft_toRightOf="@+id/imageViewBanco"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/textViewConta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/textViewAgencia"
                card_view:layout_constraintLeft_toRightOf="@+id/textViewAgencia"
                android:layout_marginLeft="31dp" />

            <TextView
                android:id="@+id/textViewTipoConta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textViewAgencia"
                card_view:layout_constraintLeft_toRightOf="@+id/imageViewBanco"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/textViewCpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                card_view:layout_constraintLeft_toRightOf="@+id/imageViewBanco"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/textViewTipoConta" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>